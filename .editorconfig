# http://editorconfig.org

# EditorConfig帮助开发人员定义和维护一致的编码风格在不同的编辑器和IDE
root = true                     # 表明是最顶层的配置文件，发现设为true时，才会停止查找.editorconfig文件

[*]                             # 应用的文件格式
indent_style = space            # 设置缩进风格，tab或者space
indent_size = 2                 # 缩进的宽度，即列数，整数
end_of_line = lf                # 换行符，lf、cr和crlf
charset = utf-8                 # 编码
trim_trailing_whitespace = true # 设为true表示会除去换行行首的任意空白字符
insert_final_newline = true     # 为true表明使文件以一个空白行结尾

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
